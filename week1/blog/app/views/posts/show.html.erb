<div style="width:100%; height: 300px; overflow-y:hidden">
  <%= image_tag(@post.banner, style: 'width:100%') %>
</div>
<div class="container" style="margin-top:2em">

  <div class="row">
    <div class="jumbotron" style="width:100%">
      <h1 class="display-4">
        <%= link_to @post.title, root_path %>
      </h1>
      <p class="head">
        <%= @post.updated_at.strftime("%A, %B %e, %Y") %> by
        <%= @post.user.username %>|<%= pluralize(@post.views, @post.updated_at, "views") %>
      </p>
      <hr class="my-4"/>
      <div class="post_body">
        <%= @post.body %>
      </div>
    </div>
  </div>
  <br>
    <div>
      <%= link_to "Edit this post", edit_post_path(@post) %> |
      <%= link_to "Back to posts", posts_path %>
      <br><br>
      <%= button_to "Destroy this post", @post, class:"btn btn-danger", method: :delete %>
    </div>
  </div>
